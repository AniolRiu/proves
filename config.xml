<?xml version='1.0' encoding='utf-8'?>
<widget 
	xmlns="http://www.w3.org/ns/widgets" 
	xmlns:gap="http://phonegap.com/ns/1.0"
	id="com.articapps.proves" 
	version="1.0.0"
	versionCode="1" >
<name>Boxing</name>
<description>This app shows your boxing power.</description>
<author email="artic.vb@gmail.com">
	Aniol Riu
</author>
<preference name="fullscreen" value="true" />
<icon src="res/icon.png" />
<platform name="android">
	<icon src="res/android/drawable-ldpi/ic_launcher.png" density="ldpi" />
	<icon src="res/android/drawable-mdpi/ic_launcher.png" density="mdpi" />
	<icon src="res/android/drawable-hdpi/ic_launcher.png" density="hdpi" />
	<icon src="res/android/drawable-xhdpi/ic_launcher.png" density="xhdpi" />
</platform>

<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
<uses-permission android:name="android.permission.GET_ACCOUNTS" />
<uses-permission android:name="android.permission.WAKE_LOCK" />
<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
<permission android:name="$PACKAGE_NAME.permission.C2D_MESSAGE" android:protectionLevel="signature" />
<uses-permission android:name="$PACKAGE_NAME.permission.C2D_MESSAGE" />

<platform name="ios">
	<!-- iOS 7.0+ -->
	<!-- iPhone / iPod Touch  -->
	<icon src="res/ios/icon-60.png" width="60" height="60" />
	<!-- iOS 6.1 -->
	<!-- iPhone / iPod Touch -->
	<icon src="res/ios/icon.png" width="57" height="57" />
	<icon src="res/ios/icon@2x.png" width="114" height="114" />
	<!-- iPad -->
	<icon src="res/ios/icon-72.png" width="72" height="72" />
	<icon src="res/ios/icon-72@2x.png" width="144" height="144" />
	<!-- iPad Spotlight and Settings Icon -->
	<icon src="res/ios/icon-50.png" width="50" height="50" />
	<icon src="res/ios/icon-50@2x.png" width="100" height="100" />
</platform>
<gap:plugin name="org.apache.cordova.device-motion" version="0.2.10" />
<gap:plugin name="org.apache.cordova.media" />
<gap:plugin name="com.phonegap.plugins.pushplugin" spec="2.1.1" source="pgb" />
</widget>
